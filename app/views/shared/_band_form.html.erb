<form action="/bands" method="post">
  <input type="hidden"
          name="authenticity_token"
         value="<%= form_authenticity_token %>" >


  <label for="name"><mark>Band Name</label>
  <input
    type="text"
    name="band[name]"
    id="name"
    value="<%= band.name %>">
  <br>


  <input type="submit" value="Save Band">
</form>
